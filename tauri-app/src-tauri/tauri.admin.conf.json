{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zenith Cafe Manager - Admin",
  "version": "1.0.0",
  "identifier": "com.zenith.cafe-manager.admin",
  "build": {
    "frontendDist": "../server/templates",
    "devUrl": "http://127.0.0.1:5001/",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "Zenith Admin - Başlatılıyor",
        "width": 500,
        "height": 700,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "url": "loading.html"
      },
      {
        "label": "main",
        "title": "Zenith - Yönetim Paneli",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "url": "http://127.0.0.1:5001/"
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Zenith Team",
    "copyright": "© 2025 Zenith Team",
    "category": "Utility",
    "shortDescription": "Zenith Internet Cafe Manager - Yönetim Paneli",
    "longDescription": "Zenith Internet Cafe Manager için yönetim paneli."
  },
  "plugins": {}
}
