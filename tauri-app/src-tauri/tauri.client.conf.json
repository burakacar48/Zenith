{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zenith Cafe Manager",
  "version": "1.0.0",
  "identifier": "com.zenith.cafe-manager",
  "build": {
    "frontendDist": "../server/templates",
    "devUrl": "http://127.0.0.1:5001/client",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Zenith - Yeni Nesil Oyun Menüsü",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "url": "http://127.0.0.1:5001/client"
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Zenith Team",
    "copyright": "© 2025 Zenith Team",
    "category": "Entertainment",
    "shortDescription": "Zenith Internet Cafe Manager - Yeni Nesil Oyun Menüsü",
    "longDescription": "Zenith Internet Cafe Manager, modern internet kafeler için geliştirilmiş yeni nesil oyun menü sistemi. Oyunları düzenli, kategorize ve kullanıcı dostu bir arayüzle sunar."
  },
  "plugins": {}
}
