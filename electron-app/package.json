{
  "name": "zenith-cafe-manager",
  "version": "1.0.0",
  "description": "Zenith Internet Cafe Management System - Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dev": "electron . --dev"
  },
  "author": "Zenith Cafe",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.zenith.cafemanager",
    "productName": "Zenith Cafe Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
