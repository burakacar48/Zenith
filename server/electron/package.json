{
  "name": "zenith-cafe-manager",
  "version": "1.0.0",
  "description": "Zenith Internet Cafe Manager - Electron Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.zenith.cafe-manager",
    "productName": "Zenith Cafe Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "electron",
    "cafe",
    "management",
    "flask",
    "desktop"
  ],
  "author": "Zenith Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}