{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zenith Client",
  "version": "1.0.0",
  "identifier": "com.zenith.client",
  "build": {
    "frontendDist": "../electron/src",
    "devUrl": "http://127.0.0.1:5001",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Zenith Cafe",
        "width": 1280,
        "height": 720,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Zenith Team",
    "copyright": "Â© 2025 Zenith Team",
    "category": "Entertainment",
    "shortDescription": "Zenith Internet Cafe - Client Application",
    "longDescription": "Zenith Internet Cafe client application for gaming and entertainment."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}